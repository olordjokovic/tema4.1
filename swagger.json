{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Concesionarios",
    "version": "1.0.0",
    "description": "API REST para gestionar concesionarios y sus coches"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Servidor local"
    }
  ],
  "paths": {
    "/concesionarios": {
      "get": {
        "summary": "Obtener todos los concesionarios",
        "responses": {
          "200": {
            "description": "Lista de concesionarios"
          }
        }
      },
      "post": {
        "summary": "Crear un nuevo concesionario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nombre": { "type": "string" },
                  "direccion": { "type": "string" }
                },
                "required": ["nombre", "direccion"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Concesionario creado"
          }
        }
      }
    },
    "/concesionarios/{id}": {
      "get": {
        "summary": "Obtener un concesionario por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Concesionario encontrado" },
          "404": { "description": "No encontrado" }
        }
      },
      "put": {
        "summary": "Actualizar un concesionario por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nombre": { "type": "string" },
                  "direccion": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Concesionario actualizado" }
        }
      },
      "delete": {
        "summary": "Eliminar un concesionario por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Concesionario eliminado" }
        }
      }
    }
  }
}
